<p><%= flash[:success] %></p>
<h1 class="header"><strong>Books</strong></h1>
<table border="0">
  <thead>
    <tr>
      <th class="title-c"><strong>Title</strong></th>
      <th class="body-c"><strong>Body</strong></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="title-c"><%= book.title %></td>
        <td class="body-c"><%= book.body%></td>
        <td class="table-link"><%= link_to "Show", book_path(book.id)%></td>
        <td class="table-link"><%= link_to "Edit", edit_book_path(book.id)%></td>
        <td class="table-link"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm"=>"Are you sure?"%></td>
      </tr>
    <%end%>
  </tbody>
</table>
<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |message| %>
      error:<%= message %>
    <%end%>
  <%end%>
  <h2><strong>NEW BOOK</strong></h2>
  <div>title</div>
  <%= f.text_field :title %>
  <div>body</div>
  <%= f.text_area :body %>
  <div></div>
  <%= f.submit "Create Book" %>
<%end%>